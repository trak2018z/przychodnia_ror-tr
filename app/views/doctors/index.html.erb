<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-default devise-bs">
      <div class="panel-heading"><h4>Lista lekarzy</h4></div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="searchNameInput">Znajdź lekarza o podanym imieniu lub nazwisku</label>
              <input type="text" class="form-control" id="searchNameInput" onkeyup="searchNameFunction()"
              placeholder="Wpisz imię lub nazwisko lekarza..." title="Wybierz imię lub nazwisko lekarza">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="searchSpecInput">Wybierz lekarza na podstawie specjalizacji</label>
              <input type="text" class="form-control" id="searchSpecInput" onkeyup="searchSpecFunction()"
              placeholder="Wpisz specjalizację..." title="Wybierz specjalizację lekarza">
            </div>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table table-striped table-hover" id="tabelaLekarzy">
            <thead>
              <tr>
                <th>Imię i nazwisko</th>
                <th>Specjalizacje</th>
                <% if patient_signed_in? %>
                <th>Rejestracja wizyt</th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <% @doctors.each do |doctor| %>
              <tr>
                <td><%= doctor.name %></td>
                <td>
                  <% doctor.specializations.each do |s| %>
                  <%= s.appellation %><br>
                  <% end %>
                  <% if patient_signed_in? %>
                  <td> <%= link_to "Zarejestruj wizytę", new_visit_path(:doctor_id => doctor.id), class: 'btn btn-sm btn-primary' %> </td>
                  <% end %>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
