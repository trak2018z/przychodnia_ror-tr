<div class="simple-calendar">
  <div class="calendar-heading">
    <!-- dodaÄ‡ remote: :true -->
    <div class="row">
      <div class="col-sm-4" style="text-align:center">
        <%= link_to t('simple_calendar.previous'), calendar.url_for_previous_view, class: "btn btn-default"%>
      </div>
      <div class="col-sm-4" style="text-align:center">
        <span class="calendar-title badge"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
      </div>
      <div class="col-sm-4" style="text-align:center">
        <%= link_to t('simple_calendar.next'), calendar.url_for_next_view, class: "btn btn-default" %>
      </div>
    </div>
  </div>
<br>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
          <%= content_tag :td, class: calendar.td_classes_for(day) do %>
          <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
          <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
          <% else %>
          <% block.call day, sorted_events.fetch(day, []) %>
          <% end %>
          <% end %>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
